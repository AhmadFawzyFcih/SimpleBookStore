<h1> <center> Edit section </center> </h1>

<%= form_for(@section , :url => section_path(@section) , :method => "patch" , :html => {class: 'col-lg-8 col-lg-offset-2'}) do |f| %>
  
  <%= render(:partial => "form" , :locals => {:f => f }) %>
  <div class="form-group">
    <%= f.submit("Update", :class => "btn btn-primary form-control") %>
  </div>
<% end %>
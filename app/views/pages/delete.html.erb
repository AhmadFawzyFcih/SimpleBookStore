<%= link_to("<< Back To List" , pages_path , :class => 'btn btn-primary') %>
<% if @page.present? %>
    <h1><%= @page.book.name %></h1>
    <img src="<%= @page.book.new_cover_image %>">
    <p><%= @page.title %></p>
    <%= form_for(@page , :url => page_path(@page) , :method => "delete") do |f|  %>
        <p> Are you sure to delete ?! </p>
        <%= f.submit("Delete" , :class => "btn btn-danger") %>
    <% end %>
<% else %>
    <br><br><br><br><br><br><br><br><br><br>
    <h1><center>page Not Fount...</center></h1>
<% end %>


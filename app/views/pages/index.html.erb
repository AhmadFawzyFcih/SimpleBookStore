<%= link_to("ADD new page" , new_page_path(:book_id => @book_id) , :class => 'btn btn-primary' ) %><hr>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Book Name</th>
      <th scope="col">page Title</th>
      <th scope="col">Page Rank</th>
      <th scope="col">Available</th>
      <th scope="col">Creation Date</th>
      <th scope="col">Sections Count</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
        <tr>
            <th scope="row"><%= page.id %></th>
            <td><%= page.book.name %></td>
            <td><%= page.title %></td>
            <td><%= page.position %></td>
            <td><%= page.visible ? 'true' : 'false' %></td>
            <td><%= page.created_at %></td>
            <td><%= page.sections.count %></td>
            <td>
                <%= link_to("Page sections" , sections_path(:section_id => page.id) , :class => 'btn btn-info' ) %>
                <%= link_to("Show", page_path(page), :class => 'btn btn-info') %>
                <%= link_to("Edit" , edit_page_path(page) , :class => 'btn btn-success' ) %>
                <%= link_to("Delete" , delete_page_path(page) , :class => 'btn btn-danger' ) %>
            </td>
        </tr>        
    <% end %>        
  </tbody>
</table>
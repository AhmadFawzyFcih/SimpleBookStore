<%= link_to("ADD Book" , new_book_path , :class => 'btn btn-primary') %><br><br>

<table class="table" style="background: #fdfdfd;">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Book Name</th>
      <th scope="col">Cover Image</th>
      <th scope="col">Rank</th>
      <th scope="col">Available</th>
      <th scope="col" width="100px">Pages Count</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
        <tr>
            <th scope="row"><%= book.id %></th>
            <td><%= book.name %></td>
            <td><%= image_tag(book.cover_image.url, alt: book.name , :size=>"300x200") %></td>
            <td><%= book.position %></td>
            <td><%= book.visible ? 'true' : 'false' %></td>
            <td><%= book.pages.count %></td>
            <td>
                <%= link_to("Book Pages" , pages_path(:book_id => book.id) , :class => 'btn btn-info' ) %>
                <%= link_to("Show", book_path(book), :class => 'btn btn-info') %>
                <%= link_to("Edit" , edit_book_path(book) , :class => 'btn btn-success' ) %>
                <%= link_to("Delete" , delete_book_path(book) , :class => 'btn btn-danger' ) %>
            </td>
        </tr>        
    <% end %>        
  </tbody>
</table>
  <%= will_paginate @books , class:"apple_pagination" %>